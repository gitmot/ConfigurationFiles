;; Auto completion
;; https://company-mode.github.io/
(add-hook 'after-init-hook 'global-company-mode)
;; TAB cycles
(eval-after-load 'company
  '(progn
     (define-key company-active-map (kbd "TAB") 'company-complete-common-or-cycle)
     (define-key company-active-map (kbd "<tab>") 'company-complete-common-or-cycle)))
